{
    "extends": "./node_modules/ts-node/node16/tsconfig.json",
    "ts-node": {
        "pretty": true,
        "compiler": "typescript",
    },
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "esModuleInterop": true,
        "strict": true,
        "strictPropertyInitialization": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./build"
    },
    "exclude": [
        "node_modules"
    ]
}